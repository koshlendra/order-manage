
<h2>Employee list.....</h2>

<div class="addemployee">
<%= link_to "Create User", new_employee_path, :class => 'btn btn-success'%>
</div>
<table border="1" class="table table-striped">
  <tr class="danger">
     <th>S.No.</th>
     <th>Name</th>
     <th>Email</th>
     <th>Phone</th>
     <th>Address</th>
     <th colspan="3"><center>Opration</center></th>
 </tr>
 <% @users.each do |user| %>
 <tr>
     <td><%= user.id%></td>
     <td><%= user.first_name %></td>
     <td><%= user.email %></td>
     <td><%= user.phone %></td>
     <td><%= user.address %></td>

     <td><%=link_to"",employee_path(user.id),:class=>"glyphicon glyphicon-eye-open"%></td>
     <% if can? :update, @article %>
  <td><%=link_to"",edit_employee_path(user.id),:class=>"glyphicon glyphicon glyphicon-edit"%></td>
<% end %>
     
     <td><%=link_to"",employee_path(user.id),method: :delete,:class=>"glyphicon glyphicon-trash"%></td>
 </tr>
<%end%>
</table>
<div class="paginate">
<%= paginate @users %>
</div>
