<h2>Product list .....</h2>
<div class="createproduct"> 
<%= link_to 'Add New Product', new_product_path,:class => 'btn btn-info'%>
</div>
<table border="1" class="table table-striped">
<tr class="danger"> <th>ID</th>
<th>Name</th>
<th>Price</th>
<th>Brand</th>
<th>Color</th>
<th>Quntity</th>
<th colspan="3"><center>Opration</center></th>
</tr> 
<%@product.each do |product|%>
<tr>
<td><%=product.id%></td>
<td><%=product.name%></td>
<td><%=product.price%>$</td>
<td><%=product.brand%></td>
<td><div style="background:<%=product.color%>;height:22px;width:100px;position:absolute;"></div></td>


<td><%=product.quantity%></td>

  
<td><%=link_to"",product_path(product.id),:class=>"glyphicon glyphicon-eye-open"%>

</td>
 
<td><%=link_to "",edit_product_path(product.id),:class=>"glyphicon glyphicon glyphicon-edit"%></td>
<td><%=link_to"",product_path(product.id),method: :delete,:class=>"glyphicon glyphicon-trash"%></td>
</tr>


<%end%>
</table>
<div class="paginate"> <%= paginate @product %></div>

