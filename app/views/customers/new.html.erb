<div class="newcustomer"> 
 <div class="container">
  <h3>Create customer !!!!!!!</h3> 
   <div class="row">

  <%= nested_form_for @customer ,url: customers_path do |f| %>
 

     <div class='field'> 
        
       <%= f.label :first_name %>: 
       <%= f.text_field :name, autofocus: true ,:class => 'form-control'%> 
       <%= @customer.errors.full_messages.first if @customer.errors.any? %>
     </div> 
   
     <div class='field'> 
         
       <%= f.label :last_name %>:        
       <%= f.text_field :last_name,:class => 'form-control'%> 
       <%= @customer.errors.full_messages.second if @customer.errors.any? %>
         
     </div><br> 

     <div class='field'> 
         <%= f.label :email %>: 
         <%= f.email_field :email ,:class => 'form-control'%> 
       
     </div><br> 

     <div class='field'> 
        <%= f.label :phone %>: 
        <%= f.text_field :phone,:class => 'form-control'%> 
        <%= @customer.errors.full_messages.at(2) if @customer.errors.any? %>
        <%= @customer.errors.full_messages.at(3) if @customer.errors.any? %>
        <%= @customer.errors.full_messages.at(4) if @customer.errors.any? %>
     </div><br> 
     
     <div class='field'> 
        <%= f.label :telephone %>: 
        <%= f.text_field :telephone,:class => 'form-control'%> 
        <%= @customer.errors.full_messages.at(5) if @customer.errors.any? %>
        
     </div> <br> 
 
     <%= f.fields_for :addresses do |address_form|%>
        <div class='field'> 
          <%= address_form.label :address %>: 
          <%= address_form.text_field :address,:class => 'form-control'%> 
        </div> <br> 
 
        <div class='field'> 
          <%= address_form.label :city %>: 
          <%= address_form.text_field :city,:class => 'form-control'%> 
        </div><br> 
 
        <div class='field'> 
          <%= address_form.label :country %>: 
          <%= address_form.text_field :country,:class => 'form-control'%> 
        </div><br> 
        <div class='field'> 
          <%= address_form.label :Pincode %>: 
          <%= address_form.text_field :pincode,:class => 'form-control'%> 
        </div> <br> 
     <%end%> 

 
     <div class="signbottun"> 
       <div class="actions"> 
         <%= f.submit "Create customer", :class => 'btn btn-success' %> 
       </div> 
    </div><br> 

   <%end%> 
   </div>

 </div>
</div>




    
