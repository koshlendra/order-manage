
<div class="newcustomer">
<h3>Update Customer Detail !!!!!!!</h3>


<%= form_for @customer, url: customer_path do |f| %>

 <div class="row">
     <div class='field'>
     <div class="col-md-1">
          <%= f.label :name %>:
          </div>
          <div class="col-md-4 input-sm">
             <%= f.text_field :name, autofocus: true ,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
  <div class="row">
     <div class='field'>
     <div class="col-md-1">
          <%= f.label :last_name %>:
          </div>
          <div class="col-md-4 input-sm">
             <%= f.text_field :last_name,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
<div class="row">
     <div class='field'>
     <div class="col-md-1">
          <%= f.label :email %>:
          </div>
            
          <div class="col-md-4 input-sm">
              <%= f.email_field :email ,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
<div class="row">
     <div class='field'>
     <div class="col-md-1">
         <%= f.label :phone %>:
          </div>
          
          <div class="col-md-4 input-sm">
             <%= f.text_field :phone,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
  <div class="row">
<div class='field'>
     <div class="col-md-1">
         <%= f.label :telephone %>:
          </div>
          
          <div class="col-md-4 input-sm">
             <%= f.text_field :telephone,:class => 'form-control'%>
          </div>
          <div class="col-md-4"> <%= @customer.errors.full_messages.at(9) if @customer.errors.any? %></div>
     </div>
  </div><br>

     <%= f.fields_for :addresses do |address_form|%>
  <div class="row">
<div class='field'>
     <div class="col-md-1">
         <%= address_form.label :address %>:
          </div>
          
          <div class="col-md-4 input-sm">
             <%= address_form.text_field :address,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
     
  
  <div class="row">
<div class='field'>
     <div class="col-md-1">
         <%=address_form.label :city %>:
    </div>
          
          <div class="col-md-4 input-sm">
             <%= address_form.text_field :city,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
  <div class="row">
<div class='field'>
     <div class="col-md-1">
         <%= address_form.label :country %>:
          </div>
          
          <div class="col-md-4 input-sm">
             <%= address_form.text_field :country,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
  <div class="row">
<div class='field'>
     <div class="col-md-1">
         <%= address_form.label :Pincode %>:
          </div>
          
          <div class="col-md-4 input-sm">
             <%= address_form.text_field :pincode,:class => 'form-control'%>
          </div>
     </div>
  </div><br>
  <%end%>
<div class="row">
  <div class="signbottun">
     <div class="actions">
       <%= f.submit "update", :class => 'btn btn-success' %>
      </div>
   </div>
</div> <br>
<%end%>
</div>